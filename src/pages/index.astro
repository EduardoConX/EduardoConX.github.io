---
import Layout from "../layouts/Layout.astro";
import BasicInfo from "../components/BasicInfo.astro";
import Experience from "../components/Experience.astro";
import Projects from "../components/Projects.astro";
import Skills from "../components/Skills.astro";
---

<Layout>
  <main class="max-w-7xl m-auto p-16">
    <div class="flex flex-col gap-24 md:flex-row">
      <div class="w-full md:w-1/3 flex flex-col gap-8">
        <BasicInfo />
        <section class="flex flex-col gap-4">
          <h3 class="text-3xl text-white">About Me</h3>
          <div class="text-gray-400">
            <p class="mb-2">
              I'm a full stack developer with a passion for creating beautiful
              and functional websites and applications. I have 5+ years of
              experience working with modern web technologies and frameworks
              such as React, Next.js, and Tailwind CSS.
            </p>
            <p>
              I love turning complex problems into simple, intuitive designs.
            </p>
          </div>
        </section>
      </div>
      <Experience />
    </div>
    <Projects />
    <Skills />
  </main>
</Layout>
