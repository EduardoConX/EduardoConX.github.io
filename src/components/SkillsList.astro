---
interface Props {
  skill: string;
}

const { skill } = Astro.props;
---

<article class="bg-white/5 backdrop-blur-lg rounded-xl overflow-hidden p-6 mb-8">
  <h3 class="text-2xl font-semibold mb-4">{skill}</h3>
  <div class="grid grid-cols-3 md:grid-cols-8 gap-6">
    <slot />
  </div>
</article>
